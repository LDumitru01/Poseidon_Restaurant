# Enable Rewrite Engine
RewriteEngine On

# Get the directory where .htaccess is located
RewriteCond %{REQUEST_URI}::$1 ^(.*?)(.*)::\2$
RewriteRule ^(.*)$ - [E=BASE:%1]

# Redirect root (of this directory) to /ro (default language)
RewriteCond %{REQUEST_URI} ^%{ENV:BASE}/?$
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^$ %{ENV:BASE}ro [R=301,L]

# Handle /ro and /ru routes - serve index.php
# Since .htaccess is in /poseidon/ directory, we match /ro or /ru directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(ro|ru)/?$ index.php [L,QSA]

# Also handle case when accessing with trailing slash after language
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(ro|ru)/(.*)$ index.php [L,QSA]

# Prevent direct access to PHP files in certain directories (optional security)
# RewriteRule ^(api|partials)/ - [F,L]

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Set cache headers for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
